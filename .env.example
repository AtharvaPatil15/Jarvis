# AI Model Configuration
# Put your Gemini API key in a file called 'key.txt' or set it here
# GEMINI_API_KEY=your_api_key_here

# LM Studio Configuration (for local LLM)
LM_STUDIO_URL=http://localhost:1234/v1

# Wake Word Configuration
WAKE_WORD=jarvis
PORCUPINE_ACCESS_KEY=your_porcupine_key_here

# Voice Configuration
# Choose your preferred TTS engine: edge-tts, pyttsx3, etc.
TTS_ENGINE=edge-tts
TTS_VOICE=en-US-GuyNeural

# UI Configuration
UI_MODE=overlay  # Options: overlay, desktop, cli
HOLOGRAM_POSITION=top-right  # Options: top-right, top-left, bottom-right, bottom-left

# Assistant Configuration
ASSISTANT_NAME=Jarvis
ASSISTANT_PERSONALITY=professional  # Options: professional, casual, friendly

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
